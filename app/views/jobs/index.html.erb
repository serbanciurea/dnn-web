
<h1>Index jobs </h1>

<% @jobs.each do |job| %>
  <div class="job">
    <h2><%= job.title %></h2>
    <p><%= job.location %></p>
    <p><%= job.salary %></p>
    <p><%= format_description(job.description) %></p>
    <p><%= link_to 'Show', job %></p>
    <p><%= link_to 'Edit', edit_job_path(job) %></p>
    <p><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
