<div class="jobs-style">
  <h1>All Job Offers</h1>

  <div class="jobs-grid">
    <% @jobs.each do |job| %>
      <div class="job">
        <h2><%= job.title %></h2>
        <p><%= job.location %></p>
        <p><%= link_to 'Show', job, class: 'gradient-button' %></p>      </div>
    <% end %>
  </div>
</div>
