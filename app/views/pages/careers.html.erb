<script>
  window.addEventListener('scroll', function() {
    const dividerImage = document.querySelector('.divider-image');
    const scrollPosition = window.scrollY;

    // Adjust the multiplier to make the parallax effect more subtle
    let newPosition = 70 - scrollPosition * 0.1;

    // Limit the movement within a range (e.g., between 60% and 80%)
    newPosition = Math.max(60, Math.min(newPosition, 80));

    dividerImage.style.backgroundPositionY = `${newPosition}%`;
  });

</script>
